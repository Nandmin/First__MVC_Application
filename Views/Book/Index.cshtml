@*@model IEnumerable<MVC_CRUD_app.Models.BookViewModel>*@
@model System.Data.DataTable

@{
    ViewData["Title"] = "List of books";
}

    <div class="jumbotron">
        <h1 class="text-center">@ViewData["Title"]</h1>
     </div>
<p>
    
</p>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Author
            </th>
            <th>
                Price
            </th>
            <th>
                <a class="text-center" asp-action="AddOrEdit">Create New</a>@*Ez egy hyperlinket készít*@
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
                <tr>
                    <td>
                        @Model.Rows[i]["Title"]
                    </td>
                    <td>
                        @Model.Rows[i]["Author"]
                    </td>
                    <td>
                        @Model.Rows[i]["Price"]
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["BookId"]" class="text-center">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Rows[i]["BookId"]" class="text-center">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
